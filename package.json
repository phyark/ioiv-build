{
  "name": "ioiv-builder",
  "version": "1.0.0",
  "description": "一个便于个人快速开发 npm 包开发模板项目",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/phyark/ioiv-build.git"
  },
  "bugs": {
    "url": "https://github.com/phyark/ioiv-build/issues"
  },
  "homepage": "https://github.com/phyark/ioiv-build/README.md",
  "scripts": {
    "dev": "rollup -w --environment NODE_ENV:development --configPlugin typescript2 -c ./scripts/rollup.config.dev.ts",
    "build": "rollup --environment NODE_ENV:development --configPlugin typescript2 -c ./scripts/rollup.config.prod.ts",
    "lint": "eslint src",
    "fix": "npm run lint --fix",
    "commit": "git-cz",
    "test": "jest",
    "test:c": "jest --coverage",
    "prepublish": "npm run build",
    "x": "npm --no-git-tag-version version major",
    "y": "npm --no-git-tag-version version minor",
    "z": "npm --no-git-tag-version version patch",
    "pub": "npm publish --access=public",
    "pub:x": "npm run x && npm publish --access=public",
    "pub:y": "npm run y && npm publish --access=public",
    "pub:z": "npm run z && npm publish --access=public"
  },
  "author": "phyark",
  "bin": {
    "hello": "lib/index.js"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "rollup": "^4.9.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^20.10.4",
    "@typescript-eslint/parser": "^6.14.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "rollup-jest": "^3.1.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^3.0.0",
    "rollup-plugin-typescript2": "^0.36.0"
  },
  "jest": {
    "preset": "rollup-jest"
  }
}